{
  "name": "piar-repo",
  "version": "1.0.0",
  "description": "Production-ready monorepo template by Piar Concept for building modern web applications with Next.js, TypeScript, and scalable architecture",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter @piar/web dev",
    "dev:backoffice": "pnpm --filter @piar/backoffice dev",
    "dev:web-bff": "pnpm --filter @piar/web-bff dev",
    "dev:backoffice-bff": "pnpm --filter @piar/backoffice-bff dev",
    "dev:apis": "turbo dev --filter=@piar/web-bff --filter=@piar/backoffice-bff",
    "dev:clients": "turbo dev --filter=@piar/web --filter=@piar/backoffice",
    "build": "turbo build",
    "build:web": "pnpm turbo build --filter=@piar/web",
    "build:backoffice": "pnpm turbo build --filter=@piar/backoffice",
    "build:web-bff": "pnpm turbo build --filter=@piar/web-bff",
    "build:backoffice-bff": "pnpm turbo build --filter=@piar/backoffice-bff",
    "typecheck": "turbo typecheck",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "turbo lint",
    "test": "pnpm test:coverage -- --run",
    "test:coverage": "turbo test:coverage",
    "verify": "bash scripts/verify-all.sh",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Piar Concept <polribasrovira@gmail.com> (https://piarconcept.com)",
  "license": "MIT",
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "tough-cookie": "^6.0.0",
    "turbo": "^2.8.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "js-yaml": "^4.1.1",
      "lodash": "^4.17.23",
      "diff": "^4.0.4"
    }
  },
  "private": true,
  "engines": {
    "node": "20.x"
  }
}
